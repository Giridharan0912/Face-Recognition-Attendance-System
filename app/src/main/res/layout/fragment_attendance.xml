<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.AttendanceFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/background_color"
            app:popupTheme="@style/AppTheme.popUpOverlay"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextAppearance="@style/ToolbarTextStyle"
            app:titleTextColor="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title"
                    android:textColor="#fff"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-condensed"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_subtitle"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:id="@+id/framelayout_subject_list"
        android:layout_below="@id/appbar_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
             <androidx.appcompat.widget.AppCompatButton
                 android:id="@+id/takeAttendanceBtn"
                 android:layout_width="match_parent"
                 android:layout_margin="6dp"
                 android:background="@color/purple_200"
                 android:layout_height="wrap_content"
                 android:text="@string/take_attendance"/>
            <TextView
                android:id="@+id/tv_attendance_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/himalaya"
                android:gravity="center"
                android:textSize="32sp"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@color/teal_700"
                android:layout_below="@id/takeAttendanceBtn"
                android:text="Attendance History"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attendance_history_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="4dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tv_attendance_history"/>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>